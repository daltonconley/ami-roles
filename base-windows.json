  "provisioners":[
  {
    "type":"powershell",
    "inline":[
      "Invoke-WebRequest https://www.python.org/ftp/python/2.7.10/python-2.7.10.msi -OutFile C:/Users/packer/python.msi",
      "msiexec /qn /i C:/Users/packer/python.msi",
      "Start-Sleep -s 30",
      "Invoke-WebRequest https://bootstrap.pypa.io/get-pip.py -OutFile C:/Users/packer/get-pip.py",
      "C:/Python27/python.exe C:/Users/packer/get-pip.py",
      "C:/Python27/Scripts/pip.exe install ansible",
      "mkdir C:/Users/packer/ansible-packer",
      "mkdir C:/Users/packer/ansible-packer/roles"
    ]
  },
  {
    "type": "file",
    "source":"roles/",
    "destination": "C:/Users/packer/ansible-packer/roles"
  },
  {
    "type": "ansible-local",
    "playbook_file": "{{user `ami_profile`}}.yml",
    "group_vars": "group_vars",
    "staging_directory":"C:/Users/packer/ansible-packer"
  }
